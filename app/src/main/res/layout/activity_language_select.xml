<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".main.LanguageSelect">

    <include layout="@layout/toolbar" />

    <ImageView
        android:layout_marginTop="@dimen/_95sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:src="@drawable/assnlogo" />

    <Spinner
        android:id="@+id/spinLang"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_above="@+id/btnProced"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:background="@drawable/spin" />

    <Button
        android:id="@+id/btnProced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/toolbarback"
        android:fontFamily="@font/gorditablack"
        android:inputType="text"
        android:text="@string/proceed"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp" />
</RelativeLayout>
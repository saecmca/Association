<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.AssociationReg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />


            <ImageView

                android:id="@+id/ivMenu"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                 android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/menu_icon" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.DrawerLayout

        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/assnbg">


            <ScrollView
                android:layout_above="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/tvass"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_33sdp"
                        android:background="@color/tab"
                        android:fontFamily="@font/gorditablack"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvass"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gorditalight"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />

                        <EditText
                            android:id="@+id/edName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/editdraw"
                            android:fontFamily="@font/gorditaregular"
                            android:maxLength="50"
                            android:minHeight="@dimen/_35sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:id="@+id/tvAddr1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/gorditalight"

                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />

                        <EditText
                            android:id="@+id/edAddr1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/editdraw"
                            android:fontFamily="@font/gorditaregular"
                            android:maxLength="50"
                            android:minHeight="@dimen/_35sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:id="@+id/tvAddr2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/gorditalight"

                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />

                        <EditText
                            android:id="@+id/edAddr2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/editdraw"
                            android:fontFamily="@font/gorditaregular"
                            android:maxLength="50"
                            android:minHeight="@dimen/_35sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:id="@+id/tvAddr3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/gorditalight"

                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />

                        <EditText
                            android:id="@+id/edAddr3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/editdraw"
                            android:fontFamily="@font/gorditaregular"
                            android:maxLength="50"
                            android:minHeight="@dimen/_35sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:id="@+id/tvCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/gorditalight"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />

                        <EditText
                            android:id="@+id/edCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/editdraw"
                            android:fontFamily="@font/gorditaregular"
                            android:maxLength="50"
                            android:minHeight="@dimen/_35sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:id="@+id/tvZip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/gorditalight"

                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />

                        <EditText
                            android:id="@+id/edZip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/editdraw"
                            android:fontFamily="@font/gorditaregular"
                            android:maxLength="50"
                            android:minHeight="@dimen/_35sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:id="@+id/tvRegno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/gorditalight"

                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />

                        <EditText
                            android:id="@+id/edRegNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/editdraw"
                            android:fontFamily="@font/gorditaregular"
                            android:maxLength="50"
                            android:minHeight="@dimen/_35sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:id="@+id/tvRegDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/gorditalight"

                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />

                        <EditText
                            android:id="@+id/edRegdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/editdraw"
                            android:focusable="false"
                            android:fontFamily="@font/gorditaregular"
                            android:maxLength="50"
                            android:minHeight="@dimen/_35sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/_13sdp" />


                    </LinearLayout>
                </RelativeLayout>

            </ScrollView>

            <Button
                android:layout_alignParentBottom="true"
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="@dimen/_15sdp"
                android:background="@drawable/toolbarback"
                android:fontFamily="@font/gorditablack"
                android:text="submit"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header_main2"
            app:menu="@menu/activity_main2_drawer" />
    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>